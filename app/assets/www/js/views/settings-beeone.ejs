<div class="account" data-role="collapsible" data-collapsed="false" id="<%= this.id %>">
    <h3>
        Bee One
    </h3>
    <form action="">
        <fieldset>
            <label for="username">
                Username
            </label>
            <input name="" id="username" placeholder="" value="<%= this.login ? this.login.username : '' %>" type="email" />
        </fieldset>
        <fieldset>
            <label for="password">
                Password
            </label>
            <input name="" id="password" placeholder="" value="<%= this.login ? this.login.password : '' %>" type="password" />
        </fieldset>
        <input class="verify" type="button" data-inline="true" data-theme="e" data-icon="refresh" data-iconpos="left" value="Verify" />

        <fieldset>
            <label for="accountName">
                Name
            </label>
            <input name="" id="accountName" placeholder="" value="<%= this.accountName ? this.accountName : '' %>" type="text" disabled/>
        </fieldset>
        <fieldset>
            <label for="accountId">
                Account ID
            </label>
            <select name="accountId" id="accountId" disabled>
                <option value="<%= this.accountId ? this.accountId : '' %>">Please select</option>
            </select>
        </fieldset>
        <input class="delete" type="button" data-inline="true" data-icon="minus" data-iconpos="left" value="Delete" />
        <input class="save" type="submit" data-inline="true" data-theme="b" data-icon="check" data-iconpos="left" value="Save" />
    </form>
</div>